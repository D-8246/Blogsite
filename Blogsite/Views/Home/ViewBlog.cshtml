@model ViewBLogViewModel

<div b-h3z81f26w4 class="container">
    <main b-h3z81f26w4 role="main" class="pb-3">
        <div class="row">
            <!-- Post Content Column -->
            <div class="col-lg-8">
                <!-- Title -->
                <h1 class="mt-4">@Model.Blog.Title</h1>
                <!-- Author -->
                <hr>
                <!-- Date/Time -->
                <p>Posted on @Model.Blog.Date</p>
                @foreach (var line in Model.SplitBody)
                {
                    <p>@line</p>
                }
                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        <form method="post" action="/home/addcomment">
                            <input type="hidden" value="@Model.Blog.Id" name="blogId" />
                            <div class="form-group">
                                <input id="name" type="text" value ="@Model.CookieResponse" placeholder="Please enter your name" class="form-control" name="name" />
                            </div>
                            <div class="form-group">
                                <textarea placeholder="Type your comment here..." id="content" name="content" class="form-control mt-3" rows="3"></textarea>
                            </div>
                            <button disabled id="submit" class="btn btn-primary mt-3">Submit</button>
                        </form>
                    </div>
                    @foreach (Comment comment in Model.Comments)
                    {
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                            <div class="media-body">
                                <h5 class="mt-0">
                                    @comment.Name
                                    <small>@(comment.Date)</small>
                                </h5>
                                @comment.Content
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="/js/comment-submit.js"></script>
}